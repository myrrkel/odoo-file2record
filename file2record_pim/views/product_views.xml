<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_chatter')]" position="after">
                <div class="o_attachment_preview"/>
            </xpath>
        </field>
    </record>

    <record id="add_to_ai_training_action" model="ir.actions.server">
        <field name="name">Add to AI training</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_add_to_ai_training()</field>
    </record>
</odoo>
